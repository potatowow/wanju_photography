function fb_share() {
    var fbUrl = "https://www.facebook.com/dialog/share?" +
        "app_id=1931671150490548&display=page" +
        "&href=" + encodeURIComponent(share_link) +
        "&redirect_uri=" + encodeURIComponent(share_redirect_uri);
    location.href = fbUrl;
}