// 網址
var web_url = 'https://www.marieclaire.com.tw/events/2018/03/KATE/'
var share_redirect_uri = web_url
var share_link = web_url
// 判斷使用者所使用的裝置 瀏覽器
var no_pop = (navigator.userAgent.match(/Line|MESSENGER|GOOGLE/i) != null)
var is_mobile = navigator.userAgent.match(/Line|J2ME|Opera Mini|SonyEricsson|Nokia|iPhone|iPod|BB10|PlayBook|android|webOS|BlackBerry|Windows Phone|Windows CE|Android/i) != null

var option = {
    login_call_back: 'afterLogin',
    share_call_back: 'afterShare',
    share_link: share_link,
    share_redirect_uri: share_redirect_uri
}
var obj = $('body').marieclaire_facebook_api(option);

function afterLogin(object) {
    // console.log("afterLogin");
}

function afterShare(object) {
    // console.log("afterShare");
}

